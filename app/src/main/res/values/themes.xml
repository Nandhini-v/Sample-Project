<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Your Toolbar Color-->
        <item name="colorPrimary">@color/purple_500</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/purple_700</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/black</item>

        <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>

    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="buttonLoginStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="profileCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/_4sdp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/_3sdp</item>
    </style>

    <style name="profileIconsStyle">
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/_5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="profileLinearLayoutSubHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="profileHintTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
    </style>
    <style name="profileTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="relativeLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
    </style>
</resources>